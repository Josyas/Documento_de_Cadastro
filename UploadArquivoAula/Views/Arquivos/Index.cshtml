@model IEnumerable<ArquivoDoc.Models.Arquivos>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["AlertMessage"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Processo)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-action="Visualizar" class="btn btn-info" asp-route-id="@item.Id" target="_blank">Vizualizar</a>
                    <a asp-action="Apagar" class="btn btn-danger" asp-route-id="@item.Id" target="_blank">Apagar</a>
                </td>
            </tr>
        }

    </tbody>
</table>

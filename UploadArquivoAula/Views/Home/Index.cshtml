@model ArquivoDoc.Models.Arquivos

<h4>Cadastro</h4>
<hr />

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
       @TempData["AlertMessage"]
       <button type="button" class="close" data-dismiss="alert">
         <span>&times;</span>
       </button>
    </div>
}

<form action="/Arquivos/CadastroDocumento" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Codigo" class="control-label"></label>
        <input asp-for="Codigo" class="form-control" id="invalidCheck2" required />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" id="invalidCheck2" required />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categoria" class="control-label"></label>
        <input asp-for="Categoria" class="form-control" id="invalidCheck2" required />
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Processo" class="control-label"></label>
          <div class="input-group mb-3">
            <label asp-for="Processo" class="input-group-text" id="invalidCheck2" required for="inputGroupSelect01">Processo</label>
             <select asp-for="Processo" class="form-control" id="inputGroupSelect01">
                 <option value="1">Novo Processo</option>
                 <option value="2">Andamento</option>
                 <option value="3">Atualizado</option>
                <option value="4">Encerrado</option>
             </select>
             <span asp-validation-for="Processo" class="text-danger"></span>
          </div>
          <span asp-validation-for="Processo" class="text-danger"></span>
    </div>
    <div>
        <input type="file" name="arquivos" id="invalidCheck2" required />
    </div>
    <div>
        <br />
        <button class="btn btn-primary">Salvar</button>
    </div>
 </form>


